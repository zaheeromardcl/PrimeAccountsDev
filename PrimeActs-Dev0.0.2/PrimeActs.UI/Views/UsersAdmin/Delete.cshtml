@model PrimeActs.UI.Models.ApplicationUser

<div class="col-md-8">
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <h3 class="panel-title text-center">Delete Users</h3>
        </div>
        <div class="panel-body">

            @using (Html.BeginForm("Delete", "UsersAdmin", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, new {@class = "col-sm-3 control-label"})
                    <div class="col-sm-7">
                        <h5>@Model.UserName</h5>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-7 pull-right">
                        <input type="submit" class="btn btn-default" value="Delete"/>
                        @Html.ActionLink("Back to List", "Index", "UsersAdmin", new {@class = "NavigationLinks"})
                    </div>
                </div>
            }
        </div>
    </div>

</div>