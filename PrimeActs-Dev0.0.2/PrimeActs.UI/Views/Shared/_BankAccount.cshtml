
<script src="~/KJScripts/Helper.js"></script>
<script src="~/KJScripts/Paging.js"></script>
<link href="~/Content/css/bootstrap-glyphicons.css" rel="stylesheet" />
@model PrimeActs.Domain.ViewModels.BankAccount.BankAccountPagingModel
@using System.Web.Script.Serialization
@{string data = new JavaScriptSerializer().Serialize(Model);}
<script type="text/javascript">
    SupplierModel.initializeBankAccountPagingModel(@Html.Raw(data));
</script>
<div class="container-fluid">

    <div class="panel-body">
        <div class="col-md-12">
            <div class="col-md-4 control-group" data-bind="validationOptions: { insertMessages: false}">
                <input type="text" class="form-control" placeholder="Bank account name" data-bind="value: BankAccountPagingModel().BankAccountSearch().AccountName, validationOptions: { insertMessages: false }, valueUpdate: 'afterkeydown', css:{'required-field': BankAccountPagingModel().IsSearchValid}" />
            </div>

            <div class="pull-right col-md-4 control-group">
                <span class="pull-right">
                    <input type="button" class="btn btn-default p-x-2" data-bind="click: function () {BankAccountPagingModel().Search()}" value="Search" />
                    <input type="button" class="btn btn-default p-x-2" data-bind="click: function () {BankAccountPagingModel().Reset() }" value="Reset" />
                </span>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row well well-sm">
            <div class="col-md-3 pull-left">
                @Html.BuildKnockoutNextPreviousLinks("Index", "/BankAccount")
            </div>

        </div>

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-4 pull-left p-x-2">Bank account name</div>
            <div class="col-md-3 pull-left p-x-2">Sort code</div>
            <div class="col-md-4 pull-left p-x-2">Account Number</div>
            <div class="col-md-1"></div>
        </div>

        <!--Commenting the mockup-->

        <div class="search-results" data-bind="foreach: BankAccountPagingModel().Paging().Entities">
            <div class="row">
                <div class="col-md-1">
                    <a data-bind="attr: { 'href': '@Url.Action("Details", "BankAccount")' + '/' + BankAccountID }">
                        <img src="~/Content/images/IconBankAccount.png" />
                    </a>
                </div>

                <div class="col-md-3 pull-left">
                    <ul style="list-style-type: none">
                        <li><span data-bind="text: AccountName"></span></li>
                    </ul>
                </div>

                <div class="col-md-3 pull-left">
                    <ul style="list-style-type: none">
                        <li><span data-bind="text: Sortcode1"></span></li>
                    </ul>
                </div>

                <div class="col-md-4 pull-left">
                    <ul style="list-style-type: none">
                        <li><span data-bind="text: AccountNumber"></span></li>
                    </ul>
                </div>
                <div class="col-md-1">
                    <a class="pull-right" data-bind="attr: { 'href': '@Url.Action("Details", "BankAccount")' + '/' + BankAccountID }">
                        <img alt="Ticket Details" src="~/Content/images/view-details-512.png" />
                    </a>
                </div>


            </div>

        </div>

        <div class="clearfix"></div>
        <div class="well well-sm">
            @Html.BuildKnockoutNextPreviousLinks("Index", "/BankAccount")
        </div>

    </div>


</div>