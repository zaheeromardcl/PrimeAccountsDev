<script src="~/KJScripts/Helper.js"></script>
<script src="~/KJScripts/PagingTS.js"></script>
<link href="~/Content/css/bootstrap-glyphicons.css" rel="stylesheet" />
@model PrimeActs.Domain.ViewModels.SupplierPagingModel
@using System.Web.Script.Serialization
@{string data = new JavaScriptSerializer().Serialize(Model);}
<script type="text/javascript">
    SupplierModel.initializeSupplierPagingModel(@Html.Raw(data), subscriberTab);
</script>
@{
    var customerName = "";
}
<div class="container-fluid" data-bind="with: SupplierPagingModel">

    <div class="panel-body">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-3 pull-left">
                @Html.BuildKnockoutNextPreviousLinks("Index", "/Supplier")
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class=" col-md-6">
                        @Html.BuildKnockoutSortableLinkNewStyle("Supplier Company Name", "Index", "/Supplier", "SupplierCompanyName")
                    </div>
                    <div class=" col-md-2">
                        @Html.BuildKnockoutSortableLinkNewStyle("Supplier Code", "Index", "/Supplier", "SupplierCode")
                    </div>
                    <div class="col-md-3">
                        @Html.BuildKnockoutSortableLinkNewStyle("Created At", "Index", "/Supplier", "CreatedDate", "date")
                    </div>
                    <div class=" col-md-1 pull-right">
                    </div>
                </div>
            </div>

            <div class="panel-body">
                <div class="search-results" data-bind="foreach: Paging().entities">
                    <div class="container line">
                        <div class="row row-padding5">
                            <div class="col-md-6">
                                <a class="pull-right" data-bind="click: function () { $parent.OpenSupplierDetails(SupplierID, SupplierCompanyName) }, attr: { 'href': '#' }">
                                    <span data-bind="text: SupplierCompanyName"></span>
                                </a>
                            </div>
                            <div class="col-md-2">
                                <span data-bind="text: SupplierCode"></span>
                            </div>
                            <div class="col-md-3">
                                <span data-bind="FormattedDate: {date: CreatedDate, format: 'txtshort'}"></span>
                            </div>
                            <div class="col-md-1 pull-right">
                                <a class="pull-right marginLeft5" data-bind="click: function () { $parent.OpenSupplierEdit(SupplierID) }, attr: { 'href': '#' }">
                                    <img alt="Edit Ticket" src="/Content/images/IconEditOrange.png">
                                </a>
                                <a class="pull-right" data-bind="click: function () { $parent.OpenSupplierDetails(SupplierID, SupplierCompanyName) }, attr: { 'href': '#' }">
                                    <img alt="Ticket Details" src="~/Content/images/view-details-512.png" />
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div>
            @Html.BuildKnockoutNextPreviousLinks("Index", "/Supplier")
        </div>
    </div>
</div>
