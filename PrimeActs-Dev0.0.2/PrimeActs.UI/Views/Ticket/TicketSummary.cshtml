@using System.Web.Script.Serialization
@model PrimeActs.Domain.ViewModels.TicketEditModel

<script src="~/KJScripts/TicketSummaryModel.js"></script>

@{
    var data = new JavaScriptSerializer().Serialize(Model);
}
<div class="col-md-8">
    <div id="TicketSummary">        

        @*<pre data-bind="text: ko.toJSON($data, null, 2)"></pre>*@
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <p class="panel-title">Ticket Summary</p>
            </div>
            <div class="col-md-12">
                <div class="col-md-2 col-md-offset-10">
                  &nbsp;
                </div>
            </div>
            <div class="col-md-12">
               <div class="col-md-2 col-md-offset-10">

                 <a href="~/tICKET/CREATETICKET"><b>New Ticket</b></a>
                   </div>
            </div>
            <div class="panel-body">
                <div class="row header">
                    <div class="col-sm-4">
                        <div class="well">
                            <p>
                            Ticket Reference:<strong>
                                    <span data-bind="text: TicketReference"></span></strong>
                            </p>
                            <p>
                                Currency :<strong>
                                    <span data-bind="text: CurrencyName"></span>
                                </strong>
                            </p>

                            <p>Ticket Date: <span data-bind="text: TicketDate"></span></p>
                            <p>Sale Type: <span data-bind="if: IsCashSale">Cash</span><span data-bind="ifnot: IsCashSale">Credit</span></p>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="well">
                            <p>PO Number: <span data-bind="text: PONumber"></span></p>
                            <p>
                                Customer:<strong>
                                    <span data-bind="text: CustomerCompanyName"></span></strong>
                            </p>
                            <p>
                                Sold by: <span data-bind="text: SalesPersonName"></span>
                            </p>

                            <p>
                                Notes: <span data-bind="text: Notes"></span>
                            </p>
                        </div>
                    </div><!--/col-->

                    <div class="col-sm-4">
                        <div class="well">
                            <p>Updated By:<span data-bind="text: CreatedBy"></span></p>
                            <p>Updated:<span data-bind="text: CreatedDate"></span></p>
                            <p>Created By:<span data-bind="text: CreatedBy"></span></p>
                            <p>Created:<span data-bind="text: CreatedDate"></span></p>
                            <p></p>
                        </div>
                    </div>
                </div><!--/row-->


            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var TicketSummaryModel = new TicketSummary(@Html.Raw(data));
    ko.applyBindings(TicketSummaryModel, document.getElementById("TicketSummary"));
</script>