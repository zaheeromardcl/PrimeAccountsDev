@using System.Web.Script.Serialization
@model PrimeActs.Domain.ViewModels.Company.CompanyEditModel
<script src="~/KJScripts/Helper.js"></script>

<script src="~/KJScripts/Company/CompanyDetails.js"></script>
@{
    var data = new JavaScriptSerializer().Serialize(Model);
}
<div class="col-md-8" id="Company">
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <h3 class="panel-title text-center">Company Details</h3>
        </div>
        <div class="panel-body">
            <div class="col-md-8 pull-right">
                <a href="~/Company/Create" class="pull-right btn btn-new" title="New">
                    <img src="~/Content/images/IconNew-orange.png" />&nbsp;New Company <!---->
                </a>
            </div><br />
            <dl class="dl-horizontal">
                <dt>Name</dt>
                <dd>
                    <span data-bind="text: Company().CompanyName"></span>
                </dd>
            </dl>
            <dl class="dl-horizontal">
                <dt>Parent Company</dt>
                <dd>
                    <span data-bind="text: Company().RelatedCompanyName"></span>
                </dd>
            </dl>
            <div class="row"></div>
        </div>
        <div class="col-md-12">
            <div class="row"></div>
            <a class="tab-content pull-right" href="~/Company/Index">Back to Companys</a>
        </div>
    </div>

    <script type="text/javascript">
        var user = new CompanyModel(@Html.Raw(data));
        ko.applyBindings(user, document.getElementById("Company"));
    </script>
